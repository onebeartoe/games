<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<TabPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
         fx:controller="org.onebeartoe.desktop.AdvancementsController">
   <tabs>
       
      <Tab text="Nether">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
        </content>
      </Tab>
      <Tab text="Adventure">
        <graphic>

        </graphic>
          <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
        </content>
      </Tab>

      <Tab text="Husbandry">
          
         <content>
            <SplitPane dividerPositions="0.5" orientation="VERTICAL">
              <items>
                  <ScrollPane />
                  <ScrollPane>
                     <content>
                        <SplitPane dividerPositions="0.5">
                          <items>
                              <TextArea fx:id="havesTextArea" />
                              <TextArea />
                          </items>
                        </SplitPane>
                     </content>
                  </ScrollPane>
              </items>
            </SplitPane>             
         </content>
      </Tab>

      <Tab text="Minecraft">
         <content>
            <VBox fx:id="vBox" alignment="CENTER" spacing="20.0">
                <children>
                    <Label text="Advancements" />
                    <Button fx:id="worldButton1" onAction="#switchToPrimary" text="Hubbandry" />
                    <Button fx:id="splashButton1" onAction="#switchToPrimary" text="Nether" />
                    <Button fx:id="splashButton2" onAction="#switchToPrimary" text="Minecraft" />
                </children>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
            </VBox>
         </content>
      </Tab>
   </tabs>
</TabPane>
